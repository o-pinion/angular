{
  "files": ["**/*.ts"],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "assert",
          "clear",
          "count",
          "error",
          "group",
          "groupCollapsed",
          "groupEnd",
          "info",
          "table",
          "time",
          "timeEnd",
          "timeLog",
          "trace",
          "warn"
        ]
      }
    ],
    "@angular-eslint/component-class-suffix": [
      "error",
      {
        "suffixes": [
          "Component",
          "Dialog",
          "Directive",
          "Form",
          "Guard",
          "Layout",
          "Modal",
          "Page",
          "Pipe",
          "Resolver",
          "Service"
        ]
      }
    ]
  }
}
